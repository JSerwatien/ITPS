@code
{
    private FrontPageDataEntity PageModel = new();
    private UserEntity CurrentUser = new();

    protected override void OnInitialized()
    {
        CurrentUser = UserFactory.GetUserInformation("joshs", "joshs");
        PopulateDummyData();
        StateHasChanged();
    }
    private void PopulateDummyData()
    {
        Random newRandom = new();
        PageModel.OpenTicketsCount = newRandom.Next();
        PageModel.DepartmentTicketsCount = newRandom.Next();
        PageModel.ClosedVsOpen = newRandom.Next();
        PageModel.NeedingMyAttentionCount = newRandom.Next();

    }
    private string GetUserName()
    {
        if(CurrentUser==null)
        { return "Loading User..."; }
        else if (!string.IsNullOrEmpty(CurrentUser.ErrorMessage))
        { return CurrentUser.ErrorMessage; }
        else
        { return "Welcome Back, " + CurrentUser.FirstName + "  " + CurrentUser.LastName; }
    }
}